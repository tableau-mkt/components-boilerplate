<div class="topic-nav">
  {{#if tabs}}
    <ul class="topic-nav__tabs">
      {{#each tabs}}
        <li><a href="#" {{#if class}}class="{{ class }}"{{/if}} data-tab-content="{{ id }}">{{ label }}</a></li>
      {{/each}}
    </ul>
  {{/if}}

  {{#if drawers}}
    <div class="topic-nav__drawers" id="topic-nav-container">
      {{#each drawers}}
        <div class="topic-nav__drawer {{#if class}}{{ class }}{{/if}}" id="{{ id }}">
          <div class="content-container">
            <ul class="topic-nav__topic-list">
              {{#each topics}}
                <li><a href="{{ url }}">{{ label}}</a></li>
              {{/each}}
            </ul>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}

  <div class="topic-nav__toggle">
    <a href="#" data-reveal-target="topic-nav-container" data-reveal-media="markup" data-reveal-hide-text="∧">∨</a>
  </div>
</div>