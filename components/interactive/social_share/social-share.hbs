{{#with share}}
<div class="social-share__wrapper">
  <a class="social-share" href="#"><i class="icon icon--share"></i> {{label}}</a>

  <div class="social-share__widgets">
    {{#each widgets}}
      <a href="#" class="social-share__widget social-share__widget--{{type}}" data-social="{{type}}">
        <i class="icon icon--social-{{type}}"></i>
      </a>
    {{/each}}
  </div>
</div>
{{/with}}
